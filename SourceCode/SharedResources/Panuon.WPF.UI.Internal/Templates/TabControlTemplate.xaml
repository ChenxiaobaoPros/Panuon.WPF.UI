                        Property="VerticalScrollBarVisibility"
                        Value="Disabled" />
                <Setter TargetName="PART_BackwardButton"
                        Property="Visibility"
                        Value="Collapsed" />
                <Setter TargetName="PART_ForewardButton"
                        Property="Visibility"
                        Value="Collapsed" />
            </Trigger>
            <Trigger Property="TabStripPlacement"
                     Value="Left">
                <Setter TargetName="GrdHeader"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="GrdHeader"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="BdrFront"
                        Property="HorizontalAlignment"
                        Value="Right" />
                <Setter TargetName="BdrEnd"
                        Property="HorizontalAlignment"
                        Value="Right" />
            </Trigger>
            <Trigger Property="TabStripPlacement"
                     Value="Right">
                <Setter TargetName="GrdHeader"
                        Property="Grid.Column"
                        Value="2" />
                <Setter TargetName="BdrFront"
                        Property="HorizontalAlignment"
                        Value="Left" />
                <Setter TargetName="BdrEnd"
                        Property="HorizontalAlignment"
                        Value="Left" />
            </Trigger>
            <Trigger Property="local:TabControlHelper.HeaderPanelRibbonLineStrategy"
                     Value="Stretch">
                <Setter TargetName="BdrEnd"
                        Property="Visibility"
                        Value="Collapsed" />
                <Setter TargetName="BdrFront"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="BdrFront"
                        Property="Grid.RowSpan"
                        Value="5" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>
